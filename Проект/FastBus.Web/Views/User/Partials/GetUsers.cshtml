@using FastBus.Web.Helpers
@model FastBus.Web.Models.User.UserResultViewModel
@if (Model.Result.Data.Count > 0)
{
    <table class="table bordered hovered striped shadow">
        <thead>
            <tr>
                <th>№</th>
                <th>ФИО</th>
                <th>Логин</th>
                <th>Дата регистрации</th>
                <th>Роль</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Result.Data)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.UserName</td>
                    <td>@user.RegistredDate.ToLongDateString()</td>
                    <td>@user.Role</td>
                    <td>
                        <a class="button primary" href="@Url.Action("Update", new {id = user.Id})" title="Редактировать">
                            <span class="mif-pencil"></span>
                        </a>
                        <a class="button danger" href="@Url.Action("Delete", new {id = user.Id})" title="Удалить">
                            <span class="mif-cross"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="grid">
        <div class="row cells2">
            <div class="cell">
                @Html.PageLinks(Model.Search.Paging, Model.Result.TotalFiltered)
            </div>
            <div class="cell align-right padding10 no-padding-right">
                <span class="bg-grayLighter padding10">
                    Запросу удовлетворяет @Model.Result.TotalFiltered из <span class="fg-lightBlue">@Model.Result.Total</span>
                </span>
            </div>
        </div>
    </div>

}
else
{
    <script>
        showNotify("По запросу результатов не найдено")
    </script>
}
